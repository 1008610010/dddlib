<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
			
	<bean id="dataSource" class="com.dayatang.dsrouter.SaasDataSource">
	    <property name="tenantHolder">
	        <bean class="com.dayatang.dsrouter.tenantholder.ThreadLocalTenantHolder"/>
	    </property>
	    <property name="dataSourceRegistry" ref="dataSourceRegistry" />
	</bean>
	
	<bean id="dataSourceRegistry" class="com.dayatang.dsrouter.dsregistry.MappedDataSourceRegistry">
	    <property name="dataSourceCreator" ref="dataSourceCreator"/>
	</bean>

	<bean id="dataSourceCreator" class="com.dayatang.dsrouter.dscreator.C3P0DataSourceCreator">
	    <constructor-arg index="0" ref="urlTranslator"/>
	    <constructor-arg index="1" ref="dsConfProps"/>
	</bean>
	
	<bean id="dsConfProps" factory-bean="dsConfiguration" factory-method="getProperties"/>
	
	<bean id="dsConfiguration" class="com.dayatang.utils.ConfigurationFileImpl" factory-method="fromClasspath">
	    <constructor-arg value="/ds-config.properties"/>
	</bean>
	
	<bean id="urlTranslator" class="com.dayatang.dsrouter.urltranslator.MySqlUrlTranslator">
	    
	</bean>
</beans>
